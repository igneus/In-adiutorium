# zaltar

zalmyzaltare = []

cislazalmu_zaltar = %w( 95 100 67 24

                  141 142 63 149 118i 118ii 118iii 110 114
                  5 29 19b 7i 7ii 11 15
                  33 119alef 13 14 20 21
                  36 47 119beth 17i 17ii 27i 27ii
                  57 48 119gimel 25i 25ii 30 32
                  51 119dalet 26 28 41 46
                  119kof 117 119he 34i 34ii
                  
                  119nun 16 118 150 23 76i 76ii 115
                  42 19a 119vau 40i 40ii 45i 45ii
                  43 65 119zajin 53 54 49i 49ii
                  )

commonoptions = '--columns --lettrine --dashes --no-paragraph' # sazba do sloupcu
# commonoptions = ''
# commonoptions = '--novydvur-newlines'

cislazalmu_zaltar.each do |z|
  zalmyzaltare << genzalm("zalm"+z+".zalm", commonoptions)
end

canticleoptions = commonoptions+" --pretitle \"kantikum\\\\\\\\ \""

zalmyzaltare << genzalm('kantikum_fp2.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_ef1.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_zj4.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_kol1.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_zj11.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_zj15.zalm', canticleoptions)

zalmyzaltare << genzalm('kantikum_dan3i.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_1kron29.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_tob13.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_jdt16.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_jer31.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_iz45.zalm', canticleoptions)
zalmyzaltare << genzalm('kantikum_ex15.zalm', canticleoptions)
