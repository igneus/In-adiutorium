desc "Delete LilyPond-Book's stored snippets"
task :snipclean do
  cd 'vystup'
  sh 'rm -rf tmp*'
  sh 'rm -rf snippet*'
  Dir['*'].each {|f| sh "rm -rf #{f}" if f.size == 2 }
  cd '..'
end

